@model IEnumerable<JobInterviewApp.Models.Candidate>

@{
    ViewBag.Title = "Index";
}
    <table class="table">
        <tr>
            <th colspan="2">
                <div>Candidates<a href="@Url.Action("Create")" class="glyphicon glyphicon-plus-sign" style="float: right; font-size: large;"></a></div>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Votes)
            </th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Votes)
        </td>
        @*<td>
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>*@
    </tr>
        }
    </table>


    